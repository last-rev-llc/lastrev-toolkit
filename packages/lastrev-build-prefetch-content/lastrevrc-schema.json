{
  "$ref": "#/definitions/LastRevRc",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AdapterConfig": {
      "additionalProperties": false,
      "properties": {
        "assetRefTypeText": {
          "type": "string"
        },
        "contentRefTypeText": {
          "type": "string"
        },
        "downloadActionText": {
          "type": "string"
        },
        "linkContentType": {
          "type": "string"
        },
        "manualEntryTypeText": {
          "type": "string"
        },
        "modalActionText": {
          "type": "string"
        },
        "newWindowActionText": {
          "type": "string"
        },
        "sameWindowActionText": {
          "type": "string"
        },
        "urlMap": {
          "additionalProperties": {
            "additionalProperties": false,
            "properties": {
              "key": {
                "type": "string"
              },
              "url": {
                "type": "string"
              }
            },
            "required": [
              "url",
              "key"
            ],
            "type": "object"
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "BuildConfig": {
      "additionalProperties": false,
      "properties": {
        "adapterConfigFile": {
          "type": "string"
        },
        "componentsDirectory": {
          "type": "string"
        },
        "contentJsonDirectory": {
          "type": "string"
        },
        "contentPrefetch": {
          "$ref": "#/definitions/ContentPrefetchConfig"
        },
        "i18nFile": {
          "type": "string"
        },
        "locales": {
          "$ref": "#/definitions/LocalesConfig"
        },
        "localesOutputDirectory": {
          "type": "string"
        },
        "mappingFile": {
          "type": "string"
        },
        "mappings": {
          "$ref": "#/definitions/MappingConfig"
        },
        "outputDirectory": {
          "type": "string"
        },
        "paths": {
          "additionalProperties": {
            "anyOf": [
              {
                "$ref": "#/definitions/SimplePathConfig"
              },
              {
                "$ref": "#/definitions/ComplexPathConfig"
              }
            ]
          },
          "type": "object"
        },
        "pathsFile": {
          "type": "string"
        },
        "settingsContentType": {
          "type": "string"
        },
        "settingsFile": {
          "type": "string"
        },
        "settingsInclude": {
          "type": "number"
        },
        "translatedPagesDirectory": {
          "type": "string"
        },
        "untranslatedPagesDirectory": {
          "type": "string"
        },
        "useAdapter": {
          "type": "boolean"
        },
        "useWebsiteSectionPaths": {
          "type": "boolean"
        },
        "websiteSectionPathsConfig": {
          "$ref": "#/definitions/WebsiteSectionPathsConfig"
        },
        "writeAdapterConfig": {
          "type": "boolean"
        },
        "writeContentJson": {
          "type": "boolean"
        },
        "writeLocaleData": {
          "type": "boolean"
        },
        "writeMappings": {
          "type": "boolean"
        },
        "writePaths": {
          "type": "boolean"
        },
        "writeSettings": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "ComplexPathConfig": {
      "additionalProperties": false,
      "properties": {
        "children": {
          "$ref": "#/definitions/PathChildrenConfig"
        },
        "contentType": {
          "type": "string"
        },
        "param": {
          "type": "string"
        }
      },
      "required": [
        "param",
        "contentType"
      ],
      "type": "object"
    },
    "ContentPrefetchConfig": {
      "additionalProperties": {
        "additionalProperties": false,
        "properties": {
          "childOmitFields": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "include": {
            "type": "number"
          },
          "rootOmitFields": {
            "items": {
              "type": "string"
            },
            "type": "array"
          },
          "slugField": {
            "type": "string"
          }
        },
        "required": [
          "include"
        ],
        "type": "object"
      },
      "type": "object"
    },
    "LastRevRc": {
      "additionalProperties": false,
      "properties": {
        "adapter": {
          "$ref": "#/definitions/AdapterConfig"
        },
        "build": {
          "$ref": "#/definitions/BuildConfig"
        }
      },
      "required": [
        "build",
        "adapter"
      ],
      "type": "object"
    },
    "LocalesConfig": {
      "additionalProperties": false,
      "properties": {
        "localizationLookupFieldName": {
          "type": "string"
        },
        "outputPath": {
          "type": "string"
        },
        "rawPagesDir": {
          "type": "string"
        },
        "useV1": {
          "type": "boolean"
        }
      },
      "type": "object"
    },
    "MappingConfig": {
      "additionalProperties": false,
      "properties": {
        "exclude": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "overrides": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object"
        }
      },
      "type": "object"
    },
    "PathChildrenConfig": {
      "additionalProperties": false,
      "properties": {
        "children": {
          "$ref": "#/definitions/PathChildrenConfig"
        },
        "fieldName": {
          "type": "string"
        },
        "param": {
          "type": "string"
        }
      },
      "required": [
        "param",
        "fieldName"
      ],
      "type": "object"
    },
    "SimplePathConfig": {
      "type": "string"
    },
    "WebsiteSectionPathsConfig": {
      "additionalProperties": false,
      "properties": {
        "pageContentTypes": {
          "items": {
            "type": "string"
          },
          "type": "array"
        }
      },
      "required": [
        "pageContentTypes"
      ],
      "type": "object"
    }
  }
}